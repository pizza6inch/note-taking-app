// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // 可以換成 mysql 或 sqlite
  // url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

// ==========================================
// 1. NextAuth 必備模型 (處理 Google 登入與帳戶)
// ==========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // 關聯到使用者的應用程式資料
  accounts      Account[]
  sessions      Session[]
  notes         Note[]
  todos         TodoItem[]
  starred       StarredItem[]
  indexItems    IndexItem[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// 2. 應用程式業務模型 (筆記與排程功能)
// ==========================================

model Note {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 關聯：筆記屬於哪位使用者
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 關聯：這篇筆記底下衍生的項目 (當筆記刪除時，關聯項目一併刪除)
  todos       TodoItem[]
  starred     StarredItem[]
  indexItems  IndexItem[]

  // 加上索引以加速查詢
  @@index([userId])
}

model TodoItem {
  id          String    @id @default(cuid())
  text        String
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  deadline    DateTime? // 可選的截止日期

  // 關聯：屬於哪篇筆記
  noteId      String
  note        Note      @relation(fields: [noteId], references: [id], onDelete: Cascade)

  // 關聯：屬於哪位使用者 (加上 userId 方便直接查詢某使用者的所有待辦，不用 join Note)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noteId])
}

model StarredItem {
  id          String   @id @default(cuid())
  text        String
  createdAt   DateTime @default(now())

  // 關聯
  noteId      String
  note        Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noteId])
}

model IndexItem {
  id          String   @id @default(cuid())
  text        String
  createdAt   DateTime @default(now())

  // 關聯
  noteId      String
  note        Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([noteId])
}